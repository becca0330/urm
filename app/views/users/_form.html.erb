<%= render "shared/error_messages", :target => @user %>

  <%= form.label :name, :class => "left_col" %>
  <%= form.text_field :name, :class => "right_col" %>

  <%= form.label :email, :class => "left_col" %>
  <%= form.text_field :email, :class => "right_col" %>

  <%= form.label :password, 
		form.object.new_record? ? nil : "Change password",
		:class => "left_col" %>

  <%= form.password_field :password		,
		:title => "at least 4 chars",
		:placeholder => "min 4 chars", 
		:class => "right_col" %>

  <%= form.label :password_confirmation, :class => "left_col" %><br />
  <%= form.password_field :password_confirmation, :class => "right_col" %>


