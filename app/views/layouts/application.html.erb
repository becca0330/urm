<!DOCTYPE html>
<html>
	<head>
	  	<title><%= t(:title) %></title>
		<%= stylesheet_link_tag    	"application",
		 							"jquery_ui_overcast/jquery-ui-1.8.16.custom"  %>
		
		<%# only ok with Rails 3.1.x and assets pipeline
			= javascript_include_tag "application" 
		%>
		<%= javascript_include_tag( "jquery",
									"jquery_ujs", 
									"jquery-ui",
									"jquery.toastmessage", 
									"jquery.remotipart",
									"jquery.iframe-transport",
									"application") %>
		
	  	<%= csrf_meta_tag %>
	</head>

	<body>
		
			<div id='header'>
				<a href="/">
				<h1><%= t(:title) %></h1>
				</a>
			</div>
		
		<div id="navigation">
			<%= link_to_unless_current t(:'home'), 
					:controller => 'projects', :action=>'index', :title => t(:'hint_home') %>&nbsp;|&nbsp;
			<%= link_to_function t(:'about.about'), 
				"showAboutDialog();", :title=> t (:'about.hint') %>
				<div id="aboutdialog" class="ui_dialog" title="<%= t(:'about.box_title') %>" >
					<p><%= t(:'about.info')%></p>
					<hr/>
					<small><a href="http://itm.fh-joanneum.at/usabml/urm">http://itm.fh-joanneum.at/usabml/urm</a>
						Copyright (C) 2012 internettechnik<br /> 
					       Licensed under the GNU GPLv3 (http://www.gnu.org/licenses/gpl.txt) license.
					</small>
				</div>&nbsp;|&nbsp;
			<%= link_to_unless_current t(:'admin'), 
				todos_path, :title => t(:'hint_admin') %>	
		</div>
		<br />

		<%= yield %>

	</body>
</html>
